<h1>Professores</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Prontuario</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @professores.each do |professor| %>
      <tr>
        <td><%= professor.nome %></td>
        <td><%= professor.prontuario %></td>
        <td><%= professor.email %></td>
        <td><%= link_to 'Exibir', professor %></td>
        <td><%= link_to 'Editar', edit_professor_path(professor) %></td>
        <td><%= link_to 'Deletar', professor, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


