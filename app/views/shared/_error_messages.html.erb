<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert">
      O formulário contém <%= pluralize(object.errors.count, "erro") %>.
    </div>

    <% object.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger">
        <%= msg %>
      </div>
    <% end %>
    
  </div>
<% end %>