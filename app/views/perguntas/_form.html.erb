<%= form_for([@topico, @pergunta]) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.label :enunciado %><br>
    <%= f.text_field :enunciado %>
  </div>

  <div class="field">
    <%= f.label :tipo %><br>
    <%= f.text_field :tipo %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>
